{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "shared",
        "showReuseMessage": false,
        "clear": true
    },
    "tasks": [
        {
            "label": "run",
            "type": "shell",
            "command": "dmd",
            "args": [
                "-run",
                "${file}"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "test",
            "type": "shell",
            "command": "dmd",
            "args": [
                "-unittest",
                "-run",
                "${file}"
            ],
            "group": {
                "kind": "test",
                "isDefault": true
            }
        }
    ]
}